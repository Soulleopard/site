---
import config from "@/config/config.json";

const {
  summary_length,
  writing_folder,
}: { summary_length: number; writing_folder: string } = config.settings;
const { data } = Astro.props;
const { title, description } = data.data;
---

<div class="m-6">
  <a href={`/${writing_folder}/${data.slug}`}>
    <h4 class="mb-3">
      {title}
    </h4>
  </a>
  <p>
    {description}
  </p>
</div>

